<%- include("partials/header") %>

<div class="container">
  <div class="sidebar">
    <h2>Chats</h2>
    <a href="/" class="chat-link">â¬… Back</a>
  </div>

  <div class="chat-area">
    <div class="chat-header">
      <div class="header-left">
        <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp" />
        <span class="chat-user"><%= userName %></span>
      </div>
      <div class="header-right">
        <span><%= wa_id %></span>
        <!-- Optional icons -->
        <i class="fas fa-search"></i>
        <i class="fas fa-ellipsis-v"></i>
      </div>
    </div>

    <div class="chat-box">
      <% messages.forEach(msg => { %>
        <div class="message <%= msg.user_name === 'You' ? 'you' : '' %>">
          <%= msg.message %>
        </div>
      <% }) %>
    </div>
    <form action="/send/<%= wa_id %>" method="POST">
      <input type="text" name="message" placeholder="Type a message..." required />
      <button type="submit">Send</button>
    </form>
  </div>
</div>


<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
<script>
  const socket = io();

  // Join the room for this wa_id
  socket.emit("joinRoom", "<%= wa_id %>");

  // Listen for new messages
  socket.on("newMessage", function (msg) {
    const box = document.querySelector(".chat-box");

    const div = document.createElement("div");
    div.classList.add("message", msg.status);
    div.innerHTML = `
      <p>${msg.message}</p>
      <span>${new Date(msg.timestamp).toLocaleString()} - ${msg.status}</span>
    `;
    box.appendChild(div);
  });
</script>

